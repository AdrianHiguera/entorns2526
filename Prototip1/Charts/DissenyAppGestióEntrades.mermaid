classDiagram

class Usuari {
  <<abstract>>
  int idUsuari
  String nom
  String email
  String contrasenya
  String tipusUsuari
  registrar()
  iniciarSessio()
  tancarSessio()
}

class Client {
  List~Entrada~ historialCompres
  cercarEsdeveniment()
  comprarEntrada()
  veureEntrades()
}

class Administrador {
  int nivellPermisos
  crearEsdeveniment()
  modificarEsdeveniment()
  eliminarEsdeveniment()
}

class Esdeveniment {
  int idEsdeveniment
  String nom
  String descripcio
  Date data
  String ubicacio
  int entradesDisponibles
  publicar()
  actualitzarInformacio()
  cancelar()
}

class Entrada {
  int idEntrada
  double preu
  EstatEntrada estat
  reservar()
  vendre()
  cancelarVenda()
}

class Pagament {
  int idPagament
  double import
  String metodePagament
  Date dataPagament
  processarPagament()
  validarPagament()
  retornarPagament()
}

class EstatEntrada {
  <<enumeration>>
  Disponible
  Venuda
}

Usuari <|-- Client
Usuari <|-- Administrador
Administrador "1" --> "0..*" Esdeveniment : gestiona
Esdeveniment "1" --> "1..*" Entrada : te
Client "1" --> "0..*" Entrada : compra
Entrada "1" --> "1" Pagament : genera
